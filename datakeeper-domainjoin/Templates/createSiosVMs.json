{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "licenseKeyFtpURL": {
      "type": "string"
    },
    "vmName": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "existingDiskStorageAccountName": {
      "type": "string"
    },
    "existingDiagnosticStorageAccountName": {
      "type": "string"
    },
    "availabilitySet": {
      "type": "string"
    },
    "vmSize": {
      "type": "string"
    },
    "existingDomainName": {
      "type": "string"
    },
    "adminUsername": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "vmContainerName": {
      "type": "string"
    },
    "clusterName": {
      "type": "string"
    },
    "clusterIPAddress": {
      "type": "string"
    },
    "fileShareWitnessPath": {
      "type": "string"
    },
    "prepareDataKeeperNodesModuleURL": {
      "type": "string"
    },
    "prepareDataKeeperNodesCommandStr": {
      "type": "string"
    }
  },
  "variables": {
  },
  "resources": [
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('vmName')]",
      "location": "[parameters('location')]",
      "plan": {
        "name": "bring_your_own_license_dkce_and_sql",
        "publisher": "sios_datakeeper",
        "product": "bring_your_own_license_dkce_and_sql"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "availabilitySet": {
          "id": "[parameters('availabilitySet')]"
        },
        "osProfile": {
          "computerName": "[parameters('vmName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "sios_datakeeper",
            "offer": "bring_your_own_license_dkce_and_sql",
            "sku": "bring_your_own_license_dkce_and_sql",
            "version": "latest"
          },
          "osDisk": {
            "name": "osdisk",
            "vhd": {
              "uri": "[concat('http://',parameters('existingDiskStorageAccountName'),'sios.blob.core.windows.net/',parameters('vmContainerName'),'/',parameters('vmName'), '-osdisk.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          },
          "dataDisks": [
            {
              "vhd": {
                "uri": "[concat('http://',parameters('existingDiskStorageAccountName'),'.blob.core.windows.net/',parameters('vmContainerName'),'/', parameters('vmName'), '-datadisk.vhd')]"
              },
              "name": "[concat(parameters('vmName'),'-datadisk')]",
              "caching": "None",
              "createOption": "empty",
              "diskSizeGB": 100,
              "lun": 0
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId(resourceGroup().name,'Microsoft.Network/networkInterfaces',concat(parameters('vmName'),'-nic'))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": "true",
            "storageUri": "[concat('http://',parameters('existingDiagnosticStorageAccountName'),'.blob.core.windows.net')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('vmName'), '/configureSiosVM')]",
      "apiVersion": "2015-06-15",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', parameters('vmName'))]"
      ],
      "properties": {
        "publisher": "Microsoft.Powershell",
        "type": "DSC",
        "typeHandlerVersion": "2.6",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "modulesURL": "[parameters('prepareDataKeeperNodesModuleURL')]",
          "configurationFunction": "[parameters('prepareDataKeeperNodesCommandStr')]",
          "properties": {
            "domainName": "[parameters('existingDomainName')]",
            "adminCreds": {
              "userName": "[parameters('adminUserName')]",
              "password": "PrivateSettingsRef:adminPassword"
            },
            "licenseKeyFtpURL": "[parameters('licenseKeyFtpURL')]"
          }
        },
        "protectedSettings": {
          "items": {
            "adminPassword": "[parameters('adminPassword')]"
          }
        }
      }
    }
  ],
  "outputs": { }
}