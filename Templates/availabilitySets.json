{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adAvailabilitySetName": {
      "type": "string"
    },
    "siosAvailabilitySetName": {
      "type": "string"
    },
    "location": {
      "type": "string"
    }
  },
  "resources": [
    {
		"type": "Microsoft.Compute/availabilitySets",
		"name": "[parameters('adAvailabilitySetName')]",
		"apiVersion": "2015-06-15",
		"location": "[parameters('location')]"
	},
	{
		"type": "Microsoft.Compute/availabilitySets",
		"name": "[parameters('siosAvailabilitySetName')]",
		"apiVersion": "2015-06-15",
		"location": "[parameters('location')]",
		"properties": {
			"platformFaultDomainCount": 3,
			"platformUpdateDomainCount": 3
		}
	}
  ],
  "outputs": {
    "adAvailabilitySetName": {
      "type": "string",
      "value": "[resourceId('Microsoft.Compute/availabilitySets',parameters('adAvailabilitySetName'))]"
    },
    "siosAvailabilitySetName": {
      "type": "string",
      "value": "[resourceId('Microsoft.Compute/availabilitySets',parameters('siosAvailabilitySetName'))]"
    }
  }
}
